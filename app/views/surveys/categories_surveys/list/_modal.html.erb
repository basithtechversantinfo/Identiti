<script type="text/javascript" charset="utf-8">
    $('#ListAddModal').modal();



    $('#multi_emails').blur(function() {
        validateMultipleEmails($('#multi_emails').val());
    });

    $('#multi_emails').keypress(function() {
        validateMultipleEmails($('#multi_emails').val());
    });


    function validate(emailInput) {

