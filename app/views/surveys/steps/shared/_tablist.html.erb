             <%if @survey.delivery_end_at > Time.now %>
              <li class="wizard__item <%= active_or_done_survey(@survey, step, params[:id]) %> <%= 'wizard__item--active' if params[:id] == step %> ">
             <%end%> 
           <%end%>
        <%else%>
        <li class="wizard__item <%= active_or_done_survey(@survey, step, params[:id]) %> <%= 'wizard__item--active' if params[:id] == step %> ">
        <%end%>
          <%= link_to survey_step_path(@survey, step) do %>
            <span class="wizard__step-count"><%= index + 1 %>
              <% if step != set_survey_steps.last %>
              <span class="wizard__step-icon"></span>
                <% end %>
            </span>
            <%acc = "surveys." + step%>
            <span class="wizard__step-name fnt-20 <%= 'display_font' if params[:id] == "display_type" %>"><%= t acc %></span>
          <% end %>
        </li>

      <% end %>
    </ul>
