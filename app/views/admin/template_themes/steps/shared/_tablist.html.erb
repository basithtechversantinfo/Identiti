    <div class="wizard__header">
      <h3 class="wizard__heading">Creating Template</h3>
      <small class="wizard__note wizard__note--v2"><%= @template.title.present? ? @template.title.capitalize : 'Untitled'  %><span class="wizard__question questions-count">(<%= @template.categories_template_themes.map{|c| c.category.questions.count }.sum %> questions)</span></small>
    </div>

    <ul class="wizard__list">
      <% set_theme_template_steps.each_with_index do |step, index| %>

        <li class="wizard__item <%= active_or_done(@template, step, params[:id]) %> <%= 'wizard__item--active' if params[:id] == step %>">
          <%= link_to admin_template_theme_step_path(params[:template_theme_id], step) do %>
            <span class="wizard__step-count"><%= index + 1 %>
              <% if step != set_theme_template_steps.last %>
              <span class="wizard__step-icon"></span>
                <% end %>
            </span>
            <%acc = "surveys." + step%>
            <span class="wizard__step-name"><%= t acc %></span>
          <% end %>
        </li>

      <% end %>
    </ul>
