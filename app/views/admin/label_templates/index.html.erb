<h1>Question type templates
  <%= link_to 'Question new template', new_admin_label_template_path, class: 'pull-right btn btn-warning' %>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Template Type</th>
      <th>Template for (Question type)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_label_templates.each do |admin_label_template| %>
      <tr>
        <td><%= admin_label_template.title %></td>
        <td><%= admin_label_template.description %></td>
        <td><%= admin_label_template.template_type %></td>
        <td><%= admin_label_template.question_type %></td>
        <td><%= link_to 'Edit', edit_admin_label_template_path(admin_label_template) %></td>
        <td><%= link_to 'Delete', admin_label_template_path(admin_label_template), method: :delete, data: { confirm: 'You are about to delete this template. Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>