
<h1>Block Questions
  <%= link_to 'New question', new_admin_category_question_path, class: 'pull-right btn btn-warning' %>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Type</th>
      <th>Required</th>
      <th>Chart type</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_category_questions.each do |admin_category_question| %>
      <tr>
        <td><%= admin_category_question.title %></td>
        <td><%= admin_category_question.description %></td>
        <td><%= admin_category_question.question_type %></td>
        <td><%= admin_category_question.required %></td>
        <td><%= admin_category_question.chart_type %></td>
        <td><%= admin_category_question.admin_category.title %></td>
        <td><%= link_to 'Show', admin_category_question_path(admin_category_question.admin_category, admin_category_question) %></td>
        <td><%= link_to 'Edit', edit_admin_category_question_path(admin_category_question.admin_category, admin_category_question), remote: true %></td>
        <td><%= link_to 'Delete', admin_category_question_path(admin_category_question.admin_category, admin_category_question), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
