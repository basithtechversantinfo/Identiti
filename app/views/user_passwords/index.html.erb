<%= render partial: 'layouts/flash_messages', flash: flash %>

<style>
  label {
    font-size: 0.75rem;
    font-weight: 400;
    font-style: italic;
    letter-spacing: -0.0125rem;
    line-height: 1.35;
    color: #c3cadb;
    display: block;
    text-align: left;
    padding: 0 0 0.5rem 1rem;
    color: #ff151f;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 text-center">

      <%= form_for current_account, url: user_passwords_path, method: :update do |form| %>

        <div class="thumb-img mt-5">
          <%#= image_tag 'Logo.png' %>
        </div>

        <div class="mb-4">
          <h1 class="f-color f-open-sans mt-4 awesome-heading">Update Password!</h1>
          <p class="mt-3 f-open-sans color-default awesome-content">
            Please update password to continue using application.
          </p>
        </div>

        <div class="input input-field input--email creating-survey__input">
          <%= form.password_field :password, min: 8, required: true, class: "input-field__input input--extra-big password", placeholder:'Enter new password' %>
          <%= form.password_field :password_confirmation, min: 8, required: true, class: "input-field__input input--extra-big", placeholder:'Enter new confirm password' %>
        </div>

        <div class="mb-5 mt-3">
          <%= button_tag(type: 'submit', value:"survey_continue", class: "btn btn-primarybtn btn--primary-icon btn--medium-primary-icon theme-btn") do %>
            Update and continue<span class="icon-wide-right-small arrow-button-icon"></span>
            </div>
          <% end %>
      <% end %>

    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
    $("form").validate({
        rules: {
            'account[password]': {
                minlength: 8
            },
            'account[password_confirmation]': {
                minlength: 8,
                equalTo: ".password"
            }
        }
    });
</script>