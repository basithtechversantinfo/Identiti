          </div>

          <%= render 'form', group: @group %>
        </div>
      </div>

    </div>
  </div>

</div>

<script type="text/javascript" charset="utf-8">
    $('#GroupAddModal').modal();

    $('#upload').click(function(){
        $('#group-photo').click();
    });
</script>




