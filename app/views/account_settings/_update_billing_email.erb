<div class="modal" id="UpdateBillingEmailModal" tabindex="-1" role="dialog" aria-labelledby="ListAddModalLabel">
  <div class="modal-dialog modal-lg modal-dialog-centered cgroup-pop-modal" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="cgroup-pop">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <div class="cgroup-pop-header text-center">
            <div class="cgroup-pop-header-title">Update New Billing Email</div>
          </div>
          <%= form_for @settings, url: new_billing_email_account_settings_path, method: :post do |f| %>
            <div class="cgroup-form">
              <%= f.label :billing_emails, 'Billing Email' %>
              <%= f.email_field :billing_emails, label: false, placeholder: '', required: true, focus: true, input_html: { required: true, class: 'input-field__input input--big' } %>
              <span class="text-mutued">Enter the billing email here.</span>
            </div>

            <%= f.button :submit, class: 'btn btn-common' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




